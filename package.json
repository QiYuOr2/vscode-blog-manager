{
  "name": "blog-manager",
  "displayName": "Blog Manager",
  "description": "博客文章管理插件",
  "publisher": "qiyuor2",
  "repository": {
    "url": "https://github.com/QiYuOr2/vscode-blog-manager"
  },
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:source",
    "onView:category",
    "onView:tag"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blog-manager.openFile",
        "title": "打开文件"
      },
      {
        "command": "blog-manager.resetPath",
        "title": "选择目录"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "blog-manager",
          "title": "文章管理",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "blog-manager": [
        {
          "id": "source",
          "name": "所有文章"
        },
        {
          "id": "category",
          "name": "分类"
        },
        {
          "id": "tag",
          "name": "标签"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "source",
        "contents": "请打开文章目录\n[打开文件夹](command:blog-manager.resetPath)\n",
        "when": "blog-manager.showWelcome == true"
      },
      {
        "view": "category",
        "contents": "请打开文章目录\n[打开文件夹](command:blog-manager.resetPath)\n",
        "when": "blog-manager.showWelcome == true"
      },
      {
        "view": "tag",
        "contents": "请打开文章目录\n[打开文件夹](command:blog-manager.resetPath)\n",
        "when": "blog-manager.showWelcome == true"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "blog-manager.resetPath"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "front-matter": "^4.0.2"
  }
}
