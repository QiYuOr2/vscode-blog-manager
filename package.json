{
  "name": "blog-manager",
  "displayName": "Blog Manager",
  "description": "博客文章管理插件",
  "publisher": "qiyuor2",
  "repository": {
    "url": "https://github.com/QiYuOr2/vscode-blog-manager"
  },
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:source",
    "onView:category",
    "onView:tag"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blog-manager.openFile",
        "title": "打开文件"
      },
      {
        "command": "blog-manager.resetPath",
        "title": "选择目录"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "blog-manager",
          "title": "文章管理",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "blog-manager": [
        {
          "id": "articles",
          "name": "所有文章"
        },
        {
          "id": "category",
          "name": "分类"
        },
        {
          "id": "tag",
          "name": "标签"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "source",
        "contents": "请打开文章目录\n[打开文件夹](command:blog-manager.resetPath)\n",
        "when": "blog-manager.showWelcome == true"
      },
      {
        "view": "category",
        "contents": "请打开文章目录\n[打开文件夹](command:blog-manager.resetPath)\n",
        "when": "blog-manager.showWelcome == true"
      },
      {
        "view": "tag",
        "contents": "请打开文章目录\n[打开文件夹](command:blog-manager.resetPath)\n",
        "when": "blog-manager.showWelcome == true"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "blog-manager.resetPath"
        }
      ]
    },
    "configuration": {
      "properties": {
        "bmConfig.resource.fileMatchGlob": {
          "type": "string",
          "default": "!(node_modules)/**/*.md",
          "description": "%bmConfig.resource.fileMatchGlob%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "front-matter": "^4.0.2",
    "glob": "^11.0.0"
  }
}